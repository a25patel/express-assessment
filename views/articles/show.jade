extends ../layout

block content
  div#header
    a(href = "/articles/")
      h1 The Zine
  div#container2
    if !oneArticle.url 
      div.banner(style='background-image:url(http://static1.squarespace.com/static/54e1eb34e4b00603728efcdd/54f5e15ee4b09f40436d39cd/54f5e181e4b09f40436d3d22/1425400341137/congruent_pentagon-subtle_patterns.png);')
        h3=oneArticle.title
        h3.edit Edit
    else if oneArticle.url && oneArticle.background === 'on'
      div.banner(style='background-image:url(#{oneArticle.url}); color:white;')
        h3=oneArticle.title
        h3.edit Edit
    else 
      div.banner(style='background-image:url(#{oneArticle.url});')
        h3=oneArticle.title
        a(href = '/articles/'  + oneArticle._id + '/edit') 
          h3.edit Edit
    div.content 
      p=oneArticle.body  
